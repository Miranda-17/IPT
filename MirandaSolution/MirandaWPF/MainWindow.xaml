<Window x:Class="MirandaWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Order Management System"
        Height="500" Width="800"
        Background="#f5f5f5"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Order Management System"
                   FontSize="26"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <Border Grid.Row="1"
                Background="White"
                CornerRadius="10"
                Padding="20"
                BorderBrush="#DDD"
                BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Order ID:" Grid.Row="0" Grid.Column="0"
                           VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Grid.Row="0" Grid.Column="1" Height="28" Margin="0,5"/>

                <TextBlock Text="Customer Name:" Grid.Row="0" Grid.Column="2"
                           VerticalAlignment="Center" Margin="10,0,5,0"/>
                <TextBox Grid.Row="0" Grid.Column="3" Height="28" Margin="0,5"/>

                <TextBlock Text="Order Date:" Grid.Row="1" Grid.Column="0"
                           VerticalAlignment="Center" Margin="0,5,5,0"/>
                <DatePicker Grid.Row="1" Grid.Column="1" Height="28" Margin="0,5"/>

                <TextBlock Text="Total Amount:" Grid.Row="1" Grid.Column="2"
                           VerticalAlignment="Center" Margin="10,5,5,0"/>
                <TextBox Grid.Row="1" Grid.Column="3" Height="28" Margin="0,5"/>

                <TextBlock Text="Order Status:" Grid.Row="2" Grid.Column="0"
                           VerticalAlignment="Center" Margin="0,5,5,0"/>
                <ComboBox Grid.Row="2" Grid.Column="1" Height="28" Margin="0,5">
                    <ComboBoxItem Content="Pending"/>
                    <ComboBoxItem Content="Completed"/>
                    <ComboBoxItem Content="Cancelled"/>
                </ComboBox>

                <StackPanel Grid.Row="2" Grid.Column="3"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,5,0,0">
                    <Button Content="Add" Width="80" Margin="5,0"
                            Background="#007ACC" Foreground="White" BorderBrush="#0062A3"/>
                    <Button Content="Update" Width="80" Margin="5,0"
                            Background="#28a745" Foreground="White" BorderBrush="#218838"/>
                    <Button Content="Delete" Width="80" Margin="5,0"
                            Background="#dc3545" Foreground="White" BorderBrush="#b02a37"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="2"
                Margin="0,20,0,0"
                Background="White"
                CornerRadius="10"
                Padding="20"
                BorderBrush="#DDD"
                BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Order Records"
                           FontSize="18"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>
                <DataGrid AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          HeadersVisibility="Column"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Order ID" Width="*"/>
                        <DataGridTextColumn Header="Customer Name" Width="*"/>
                        <DataGridTextColumn Header="Order Date" Width="*"/>
                        <DataGridTextColumn Header="Total Amount" Width="*"/>
                        <DataGridTextColumn Header="Order Status" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>
    </Grid>
</Window>